#include<iostream>
#include<cstdlib>
using namespace std;

int main()
{
	int n,m;  //n-> total agencies    m->total pumps available
	n=10;
	m=12;
	float x, prices[m][n];
	float a,p;
	char ans;
	float min[n];
	float temp1;
	int loc, locarr[n];
	do
	{
		x=rand()%100;
		a=((x*2)/3)+(rand()%10);
		for(int i=0;i<n;i++)
		{
			loc=0;
			temp1=101.0;
			a=a+(i+1)/100.0;
			for(int j=0;j<m;j++)
			{
				prices[j][i]=a+rand()%10+(rand()%10)/10.0;
				if(temp1>prices[j][i])
				{
					temp1=prices[j][i];
					loc=j;
				}
			}
			min[i]=temp1;
			locarr[i]=loc;
		}
		
		cout<<"     Agencies \tA1\t A2\t  A3\t   A4\t    A5\t     A6\t      A7\tA8\tA9\t  A10\n";
		for(int i=0;i<m;i++)
		{
			cout<<"\nPetrol Pump "<<i+1<<"\t";
			for(int j=0;j<n;j++)
			{
				cout<<prices[i][j]<<"  ";
			}
			cout<<"\n";
		}
		cout<<"\n----------------------------------------------------------------------------------------------------------";
		cout<<"\nBest Price   :";
		for(int i=0;i<n;i++)
		{
			cout<<"  "<<min[i];
		}
		cout<<"\n\t\t";
		for(int i=0;i<n;i++)
		{
			cout<<"Pump "<<locarr[i]+1<<"   ";
		}
		
		cout<<"\n\n --> Refresh (y/n) : ";
		cin>>ans;
		}while(ans=='y' || ans=='Y');
	
	return 0;
}

